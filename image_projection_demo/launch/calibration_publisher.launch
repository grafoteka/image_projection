    <param name="frame_id" value="camera_front_right_optical_frame"/>
    <rosparam file="$(find image_projection_demo)/config/$(arg calibration_name)/camera_front_right_gazebo.yaml" command="load" subst_value="true" />
  </node>

  <node name="$(arg camera_name)_front_camera_info_publisher" pkg="kalibr_extended_camera_info_publisher" type="camera_info_publisher_node">
    <!--param name="camera_ns" value="/camera_front"/-->
    <!--param name="frame_id" value="$(arg camera_name)_front_optical_frame"/-->
